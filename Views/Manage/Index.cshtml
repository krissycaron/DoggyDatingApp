@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<img src="@Model.ImgPath" />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Index" asp-controller="Manage" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
               
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.Address"></label>
                    <input asp-for="ApplicationUser.Address" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.City"></label>
                    <input asp-for="ApplicationUser.City" class="form-control" />
                    <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.State"></label>
                    <input asp-for="ApplicationUser.State" class="form-control" />
                    <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <!--Image Uploading for Profile Photo-->
            <div>
                <label>Upload Image:</label>
                <input asp-for="Image" class="form-control" type="file"/><br><br>
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
