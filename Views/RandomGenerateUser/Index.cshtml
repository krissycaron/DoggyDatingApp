@model serverSideCapstone.Models.ViewModels.LikedUserViewModel

@{
    ViewData["Title"] = "Index";
}
<h1>Pick Your Pup Friends!</h1>

<table class="table">
    <tbody>
        <tr>
            <th>
                  UserName:
            </th>
            <td>
                @Html.DisplayFor(modelItem => @Model.LikedUser.UserName)
            </td>
            <th>
                  Oweners Name:
            </th>
            <td>
                @Html.DisplayFor(modelItem => @Model.LikedUser.OwnerFirstName)
            </td>
            <th>
                About Me:
            </th>   
            <td> 
                 @Html.DisplayFor(modelItem => @Model.LikedUser.ProfileDescription)
            </td>
        </tr>
    </tbody>
</table>
<div class="container">
    <img class="likeImg img-responsive" src="@Html.DisplayFor(model => model.LikedUser.ImgPath)" />
    <div class="row">
    <div class="col">
        <form asp-controller="UserLike" asp-action="CreateLike" method="post">
            <input type="hidden" asp-for="@Model.LikedUser.Id" />
            <input type="submit"  asp-for="@Model.isLikedUser" value="Like" class="btn btn-default">
            <input type="submit"  asp-for="@Model.isLikedUser" value="Skip" class="btn btn-default">
        </form>
    </div>
</div>
